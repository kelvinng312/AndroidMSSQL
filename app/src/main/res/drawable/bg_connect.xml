<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#5E93CF" android:endColor="#3E7DC4" android:angle="180"/>
            <stroke android:width="1dp" android:color="#3E7DAA"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#5E93CF" android:endColor="#3E7DC4" android:angle="270"/>
            <stroke android:width="1dp" android:color="#3E7DAA"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>